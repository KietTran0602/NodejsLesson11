    //xử lí redirect đến trang chi tiết danh mục
    $(function () {
      $(".tm-category-name").on("click", function (event) {
        const categoryId = event.target.getAttribute("data-category-id");
        window.location.href = `/products/add-category/${categoryId}`;
      }
      );
    });

    $(function () {
      $(".tm-category-delete-link").on("click", function (event) {
        event.preventDefault();
        const id = event.target.getAttribute("data-category-id");

        //gọi tới url với method delete, yêu cầu xóa danh mục, sau khi xó relaod lại trang
        $.ajax({
          url: `/products/category/${id}`,
          method: "DELETE"
        }).done(function () {
          window.location.reload();
        })
      })
    })

    

     $(function() {
      $('#fileInput').on("change", (event) => {
        // Lay file da chon
        const file = event.target.files[0];
        // Tao object URL
        const url = URL.createObjectURL(file)
        // Gan url cho attribute "src" cua the img co id la "product-image-preview"
        $('#product-image-preview').attr("src", url);
      })
    })

  </script>